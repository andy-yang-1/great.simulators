<% include head %>

<div class="modal fade" id="give-battle" tabindex="-1" role="dialog" aria-labelledby="give-battle-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="give-battle-label">Start a battle with !</h4>
      </div>
      <form class="form-horizontal" role="form" action="/battle/start" method="post">
        <input type="hidden" value="<%= ai._id %>" name="ai1">
        <div class="modal-body">
          <div class="form-group">
            <label for="myai" class="col-sm-2 control-label">My AI</label>
            <div class="col-sm-10">
              <select class="form-control" id="myai" name="ai0">
                <option value="TuringMachine">TuringMachine</option>
              </select>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <input type="submit" class="btn btn-primary" value="Start a Battle!">
        </div>
      </form>
    </div>
  </div>
</div>

<form class="form-horizontal" role="form" action="/ai/upload" method="post">
  <h2>Upload Simulator Program</h2>
  <div class="form-group">
    <label for="file" class="col-sm-2 control-label">Source Code</label>
    <div class="col-sm-10">
      <textarea class="form-control" id="source-code" name="source_code" required rows="17"></textarea>
    </div>
  </div>
  <div class="form-group">
    <pre>Compile with:
    Syntax of Turing Machine Language
    
    </pre>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Upload!</button>
    </div>
  </div>
</form>

<% include foot %>